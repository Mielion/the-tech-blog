<div class="text-center">
  <div class="post-header">
    <h2>{{title}}</h2>
    <p>Posted by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <p>{{description}}</p>
</div>



<div class="comments">
  <h3>Comments:</h3>
  {{#if comments}}
    {{#each comments as |comment|}}
       <div class="comment">
        <p>{{comment.comment}}</p>
        <p>Comment by {{comment.user.username}}</p>
      </div>
    {{/each}}
     
  {{/if}}
</div>

{{#if logged_in}}
  <form id="comment-form">
    <input type="hidden" value="{{id}}" id="postId">
    <textarea id="comment-area" name="comment" placeholder="Add a comment.."></textarea>
    <button type="submit">Submit</button>
  </form>
{{/if}}

<script src="/js/comment.js"></script>